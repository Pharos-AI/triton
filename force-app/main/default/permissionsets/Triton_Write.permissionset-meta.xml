<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Provides full access to Triton logging framework including create/edit permissions</description>
    <label>Triton Write</label>
    
    <!-- Apex Class Access -->
    <classAccesses>
        <apexClass>Triton</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>TritonBuilder</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>TritonFlow</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>TritonHelper</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>TritonLwc</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>TritonTypes</apexClass>
        <enabled>true</enabled>
    </classAccesses>

    <!-- Custom Metadata Type access -->
    <customMetadataTypeAccesses>
        <enabled>true</enabled>
        <name>Log_Level__mdt</name>
    </customMetadataTypeAccesses>
    
    <!-- Log Level Custom Metadata fields -->
    <fieldPermissions>
